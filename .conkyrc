# fork to backg
background yes

# grenzen
border_width 0
border_inner_margin 0
border_outer_margin 0
stippled_borders 0
#leerzeichen links einfügen
use_spacer left

#experimentell
default_bar_size 25 9 
default_gauge_size 25 25
default_graph_size 10 25

#extra zeugs
draw_shades no

#musik
#mpd server
mpd_host
mpd_password
mpd_port

#für awesome innerhalb einer wibox
#extra_newline yes

# performance
update_interval 1.0
update_interval_on_battery 2.0
diskio_avg_samples 3
cpu_avg_samples 3
net_avg_samples 2
#zeige RAM ohne Puffer an
no_buffers no
# einzelne cores

#top
top_cpu_separate yes
top_name_width 15

default_color 222222
default_outline_color 222222
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Sans Mono:size=9

out_to_console no
out_to_stderr no
extra_newline no

# fensteroptionen
alignment top_left
own_window yes
own_window_class Conky
#own_window_colour ff0000
own_window_transparent no
#own_window_hints undecorated,below,sticky,skip_pager
own_window_hints below,sticky,skip_pager
minimum_size 1366 10
maximum_width 1366
gap_x 1
gap_y 20
#own_window_type desktop
own_window_type override

# flackern unterdrücken
double_buffer yes

stippled_borders 0
uppercase no
show_graph_scale no
show_graph_range no
format_human_readable yes
own_window_transparent no

#temperature_unit celsius
#GiB -> G KiB -> k
short_units no


